@model BlogDuLich.Models.Travel

@{
    ViewData["Title"] = Model.Name;
}

<h1>Travel around Viet Nam</h1>

<div>
    <h4>Travel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2"><label asp-for="Name"></label></dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2"><label asp-for="Adress"></label></dt>
        <dd class="col-sm-10">@Model.Adress</dd>
        <dt class="col-sm-2"><label asp-for="Year"></label></dt>
        <dd class="col-sm-10">@Model.Year</dd>
        <dt class="col-sm-2"><label asp-for="Descriptions"></label></dt>
        <dd class="col-sm-10">@Model.Descriptions</dd>
        <dt class="col-sm-2"><label asp-for="Emotions"></label></dt>
        <dd class="col-sm-10">@Model.Emotions</dd>
        <dt class="col-sm-2"><label asp-for="DataFile"></label></dt>
        <dd class="col-sm-10">@Model.DataFile</dd>
    </dl>
</div>
<div>  
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-warning">Chỉnh sửa</a>
    <a asp-action="Read" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-dark"> Đọc thêm </a>
    <a asp-action="Index" class ="btn btn-sm btn-outline-Secondary">Quay trở lại trang trước</a>
  
</div>

